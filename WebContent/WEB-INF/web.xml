<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>athensoft</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
  		classpath:com/athensoft/ecomm/config/application-context.xml
  		classpath:com/athensoft/ecomm/config/dao-context.xml
  		classpath:com/athensoft/ecomm/config/service-context.xml
  	</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>athensoft</display-name>
    <servlet-name>athensoft</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>athensoft</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <error-page>
		<error-code>400</error-code>
		<location>/WEB-INF/jsp/error/400.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/error/404.jsp</location>
	</error-page>
  <welcome-file-list>
  		<welcome-file>/</welcome-file>
		<welcome-file>/index</welcome-file>
		<welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>